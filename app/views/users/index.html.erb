<h1 class= "text-center"><%= t "users.index" %></h1>
<div class="w3-row-padding">
  <% @users.each do |user| %>
    <div class="w3-quarter w3-container w3-margin-bottom">
      <%= cl_image_tag user.avatar_url, style: "width:100%" %>
      <div class="w3-container w3-hover-khaki">
        <%= link_to user.name, user %>
      </div>
    </div>
  <% end %>
</div>
<div class="w3-center w3-padding-32">
  <ul class="w3-pagination">
    <%= paginate @users %>
  </ul>
</div>
